@model ChannelModel

@{
    ViewData["Title"] = "Join";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p style="font-size: 26px;color:white; background-color:@Model.Color">Witaj na kanale <strong>@Model.Name</strong></p>

<div style="border:1px dashed black;">
    <button><a href="@Url.Action("Add","Messenger", new { Id = Model.Id})">Dodaj wiadomość</a></button>
</div>

@if(Model.Messages.Count == 0)
{
    <strong style="color:red;">Brak wiadomości do wyświetlenia</strong>
}
else
{
<ul>
    @foreach (var messages in Model.Messages)
    {
        <li>@messages.Text - <strong>Użytkownik: </strong>@messages.User.UserName</li>
    }
</ul>
}


