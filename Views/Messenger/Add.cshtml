@model MessageViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dodaj wiadomość</h1>

@using (Html.BeginForm("Add", "Messenger", FormMethod.Post))
{
    <input type="hidden" name="ChannelId" value="@ViewBag.ChannelId" />
    @Html.LabelFor(x => x.Text)
    @Html.TextBoxFor(x => x.Text)

    <br />
    <button>Dodaj wiadomość</button>
}